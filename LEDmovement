module LEDmovement(array, LEDR);

	input  [13:0]array;
	output reg[9:0]LEDR;
	
	
	always @(array)
		begin
		case (array)
			14'b00000000000011: LEDR = 10'b0000000000;
			14'b00000000000110: LEDR = 10'b0000000001;
			14'b00000000001100: LEDR = 10'b0000000011;
			14'b00000000011000: LEDR = 10'b0000000110;
			14'b00000000110000: LEDR = 10'b0000001100;
			14'b00000001100000: LEDR = 10'b0000011000;
			14'b00000011000000: LEDR = 10'b0000110000;
			14'b00000110000000: LEDR = 10'b0001100000;
			14'b00001100000000: LEDR = 10'b0011000000;
			14'b00011000000000: LEDR = 10'b0110000000;
			14'b00110000000000: LEDR = 10'b1100000000;
			14'b01100000000000: LEDR = 10'b1000000000;
			14'b11000000000000: LEDR = 10'b0000000000;
		endcase
		end
endmodule
